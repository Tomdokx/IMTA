<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetLeft="10dp"
            android:text="Shop" />

        <Button
            android:id="@+id/btnAbility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetLeft="10dp"
            android:text="Ability" />

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:insetLeft="10dp"
            android:insetRight="10dp"
            android:text="Menu" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iVBoss"
        android:layout_width="87dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar2"
        tools:srcCompat="@drawable/avatar2" />

    <ImageButton
        android:id="@+id/ibtnMonster"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/ic_launcher_emote_background"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintCircleRadius="@android:dimen/app_icon_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emote_feelsgoodman"
        tools:srcCompat="@drawable/emote_feelsgoodman" />

    <TextView
        android:id="@+id/tvTCoinsGame"
        android:layout_width="14dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLevel"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_launcher_levelbackground"
        android:gravity="center_vertical|center_horizontal"
        android:text="0"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewHPBar"
        android:layout_width="182dp"
        android:layout_height="18dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_launcher_hp_bar"
        app:layout_constraintBottom_toTopOf="@+id/ibtnMonster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTCoinsGame" />

    <View
        android:id="@+id/viewHPBarBack"
        android:layout_width="182dp"
        android:layout_height="18dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/ic_launcher_hp_bar_back"
        app:layout_constraintBottom_toTopOf="@+id/ibtnMonster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTCoinsGame" />

</androidx.constraintlayout.widget.ConstraintLayout>